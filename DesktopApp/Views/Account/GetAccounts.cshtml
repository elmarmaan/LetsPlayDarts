@model IEnumerable<Domain.Account>

@{
    ViewBag.Title = "GetAccounts";
    Layout = "~/Views/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Create New", "AddAccount")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmailAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EmailAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditAccount", new { accountId=item.Id }) |
            @Html.ActionLink("Details", "GetAccount", new { accountId = item.Id }) |
            @Html.ActionLink("Delete", "DeleteAccount", new { accountId = item.Id })
        </td>
    </tr>
}

</table>
